{
  "manifest_version": 2,

  "name": "Github YouTrack issue link",
  "description": "Shows issue status from YouTrack beside pull request name",
  "version": "1.0.2",

  "permissions": [
    "webNavigation",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "css": ["pr-page/pr-page.css"],
      "js": ["pr-page/pr-page.js"]
    }
  ],

  "icons": {
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  }
}
